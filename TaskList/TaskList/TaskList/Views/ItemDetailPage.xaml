<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskList.ItemDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="done.png" Text="Done" Clicked="ItemComplete_Clicked" CommandParameter="{Binding .}"/>
        <ToolbarItem Icon="delete.png" Text="Delete" Clicked="ItemDelete_Clicked" CommandParameter="{Binding .}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20">
            <Label Text="Title:" FontSize="Medium" TextColor="Accent" TextDecorations="Underline"/>
            <Label Text="{Binding Title}" FontSize="Small"/>
            <Label Text="Status:" FontSize="Medium" x:Name="Status" TextColor="Accent" TextDecorations="Underline"/>
            <Label x:Name="StatusLabel" FontSize="Small"/>
            <Label Text="Due Date:" FontSize="Medium" IsVisible="False" x:Name="DueDate" TextColor="Accent" TextDecorations="Underline"/>
            <Label Text="{Binding Reminder}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>