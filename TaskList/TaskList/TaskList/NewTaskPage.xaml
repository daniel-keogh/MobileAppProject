<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskList.NewTaskPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="CenterAndExpand">

            <StackLayout Orientation="Horizontal">
                <Label Text="Remind me?"/>
                <Switch x:Name="RemindYesOrNo" 
                        Toggled="SwitchToggled"/>
            </StackLayout>

            <StackLayout x:Name="SetReminder"
                         IsVisible="False">

                <Label Text="Date:"/>
                <DatePicker x:Name="ReminderDate" 
                            VerticalOptions="CenterAndExpand" 
                            PropertyChanged="DateSelected"/>

                <Label Text="Time:"/>
                <TimePicker x:Name="ReminderTime" 
                            VerticalOptions="CenterAndExpand" 
                            PropertyChanged="TimeSelected"/>

                <Label x:Name="ChosenDateTime" 
                       Text=""/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>